</div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @flat.picture_url %>);">

</div>
<div class="container">
  <div class="content-container">

    <div class="info">
      <div class="box title mb-4 p-3">
        <h1><%= @flat.name %></h1>
        <h4><%= @flat.address %></h4>
      </div>

      <div class="box description mb-4 p-3">
        <h2>A little more about this flat...</h2>
        <p><%= @flat.description %></p>
      </div>

      <%= link_to edit_flat_path, class: "btn btn-success" do %>
        Edit Flat
      <% end %>

      <%= link_to flat_path(@flat),
                  method: :delete,
                  data: { confirm: "Are you sure you want to remove this flat?" },
                  class: "btn btn-danger" do  %>
        Delete Flat
      <% end %>
    </div>

    <div class="actions">
      <div class="box book-form mb-4">
        <h4>Book this place!</h4>
        <%= simple_form_for(@flat) do |f| %>
          <%= f.input :name %>
          <%= f.button :submit, 'Book', class: 'btn btn-info' %>
        <% end %>

      </div>

      <div class="box details mb-4">
        <h4>Details</h4>
        <p><span class="guests mx-2"><i class="fas fa-user-friends me-1"></i><%= @flat.number_of_guests %></span><span class="price"><i class="fas fa-euro-sign me-1"></i><%= @flat.price_per_night %></span></p>
      </div>


      <div class="box share mb-4 d-flex justify-content-between align-items-center">
        <h5>Share</h5>
        <div class="social-icons">
          <%= link_to '<i class="fab fa-facebook-square"></i>'.html_safe, "#" %>
          <%= link_to '<i class="fab fa-twitter-square"></i>'.html_safe, "#" %>
          <%= link_to '<i class="fas fa-envelope-square"></i>'.html_safe, "#" %>
        </div>
      </div>
    </div>

  </div>
</div>
