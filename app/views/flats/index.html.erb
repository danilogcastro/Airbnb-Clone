<h1 class="text-center my-3">All our flats</h1>

<div class="row justify-content-center">
  <% @flats.each do |flat| %>
    <div class="card-trip col-3 m-2">
      <img src=<%="#{flat.picture_url}"%>/>
      <div class="card-trip-infos">
        <%= link_to flat_path(flat) do %>
          <div>
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
          </div>
        <% end %>
        <h2 class="card-trip-pricing">â‚¬ <%= flat.price_per_night %></h2>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      </div>
    </div>
  <% end %>
</div>
